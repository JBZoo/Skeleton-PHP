{
    "name"              : "jbzoo/skeleton-php",
    "type"              : "library",
    "description"       : "__DESCRIPTION__",
    "license"           : "MIT",
    "keywords" : [
        "jbzoo"
    ],

    "authors"           : [
        {
            "name"  : "Denis Smetannikov",
            "email" : "admin@jbzoo.com",
            "role"  : "lead"
        }
    ],

    "minimum-stability" : "dev",
    "prefer-stable"     : true,

    "require"           : {
        "php" : "^8.2"
    },

    "require-dev"       : {
        "jbzoo/toolbox-dev" : "^7.3"
    },

    "autoload"          : {
        "psr-4" : {"JBZoo\\__NS__\\" : "src"}
    },

    "autoload-dev"      : {
        "psr-4" : {"JBZoo\\PHPUnit\\" : "tests"}
    },

    "config"            : {
        "optimize-autoloader" : true,
        "allow-plugins"       : {"composer/package-versions-deprecated" : true}
    },

    "extra"             : {
        "branch-alias" : {
            "dev-master" : "7.x-dev"
        }
    }
}
